import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class NameSorter {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        // Input list of names
        ArrayList<String> names = new ArrayList<>();
        names.add("Banana");
        names.add("Carrot");
        names.add("Radish");
        names.add("Apple");
        names.add("Jack");
        
        // Displaying original list of names
        System.out.println("Original list of names:");
        for (String name : names) {
            System.out.println(name);
        }
        
        // Getting sorting order choice from the user
        System.out.print("Order(A/D) : ");
        String order = scanner.nextLine().toUpperCase();
        
        // Sorting the list based on user's choice
        if (order.equals("A")) {
            Collections.sort(names); // Ascending order
        } else if (order.equals("D")) {
            Collections.sort(names, Collections.reverseOrder()); // Descending order
        } else {
            System.out.println("Invalid input. Please enter 'A' for Ascending or 'D' for Descending order.");
            return;
        }
        
        // Displaying sorted list of names
        System.out.println("Sorted list of names:");
        for (String name : names) {
            System.out.println(name);
        }
        
        scanner.close();
    }
}
