import java.util.*;
class reversenum
{
 public static void main(String arg[])
 {
        Scanner S=new Scanner(System.in);
        System.out.println("enter a number:");
        int num = S.nextInt();
        int r=0;
        while(num!=0) {
            int rem=num%10;
            r=r*10+rem;
            num=num/10;
        }
        System.out.println("Reverse num: "+r);
    }
}
