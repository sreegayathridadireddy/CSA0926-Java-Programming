import java.util.*;
class age_eligible
{
 public static void main(String arg[])
 {
  Scanner s=new Scanner(System.in);
  System.out.print("Enter age :");
  int age=s.nextInt();
  if(age>=18)
  {
   System.out.println("eligible for vote");
  }else{
   System.out.println("you are allowed to vote after"+ (18-age)+ "years");
}
}
}
